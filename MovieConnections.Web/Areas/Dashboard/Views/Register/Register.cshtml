@using WebViewPage = MovieConnections.Web.Areas.WebViewPage
@model MovieConnections.Web.Areas.Dashboard.ViewModel.RegisterViewModel

@using (Html.BeginForm("CreateOrUpdate", ControllerName, FormMethod.Post, new { @class = "form-horizontal", data_validate = "true", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label class="col-md-2 control-label">Ad</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control input-sm", data_rule_required = "true", maxlength = 255 })
            @Html.CustomValidationMessageFor(x => x.FirstName)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Soyad</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control input-sm", data_rule_required = "true", maxlength = 255 })
            @Html.CustomValidationMessageFor(x => x.LastName)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Kullanıcı Adı</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control input-sm", data_rule_required = "true", maxlength = 255 })
            @Html.CustomValidationMessageFor(x => x.UserName)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Kullanıcı Rolleri</label>
        <div class="col-md-4">
            @Html.DropDownListFor(x => x.RoleIds, Model.RoleMultiSelectList, new { @class = "form-control input-sm", multiple = "multiple"})
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Şifre</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control input-sm", data_rule_required = "true", maxlength = 255, type="password" })
            @Html.CustomValidationMessageFor(x => x.Password)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-sm", data_rule_required = "true", maxlength = 255 })
            @Html.CustomValidationMessageFor(x => x.Email)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Telefon</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control input-sm", data_rule_required = "true", maxlength = 255 })
            @Html.CustomValidationMessageFor(x => x.PhoneNumber)
        </div>
    </div>
    @Html.FormSubmitGroup()
    @Html.HiddenFor(x => x.Id)
}
@section scripts{
    <script>
        $(function() {
            $('#RoleIds').kendoMultiSelect().data("kendoMultiSelect");
        });
        
    </script>
}
