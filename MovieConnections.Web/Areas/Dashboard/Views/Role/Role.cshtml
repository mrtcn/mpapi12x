@using WebViewPage = MovieConnections.Web.Areas.WebViewPage
@model MovieConnections.Web.Areas.Dashboard.ViewModel.RoleViewModel

@using (Html.BeginForm("CreateOrUpdate", ControllerName, FormMethod.Post, new { @class = "form-horizontal", data_validate = "true", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="col-md-2 control-label">Ad</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-sm", data_rule_required = "true", maxlength = 255 })
            @Html.CustomValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Açıklama</label>
        <div class="col-md-4">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control input-sm", data_rule_required = "true" })
            @Html.CustomValidationMessageFor(x => x.Description)
        </div>
    </div>

    @Html.FormSubmitGroup()
    @Html.HiddenFor(x => x.Id)
}