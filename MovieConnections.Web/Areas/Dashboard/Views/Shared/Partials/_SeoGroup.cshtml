@using WebViewPage = MovieConnections.Web.Areas.WebViewPage
@model MovieConnections.Core.EntityParams.IHasCustomRoute



<div class="form-group">
    <label class="col-md-2 control-label">Url</label>
    <div class="col-md-4">
        @Html.TextBoxFor(x => x.Url, new {@class = "form-control input-sm", data_rule_required = "true", maxlength = 255,
       @readonly = Model.IsAutoGenerated ? "readonly" : ""})
        @Html.CustomValidationMessageFor(x => x.Url)
    </div>
    <div class="col-md-4">
        @Html.CheckBoxFor(x => x.IsAutoGenerated) Otomatik Oluştur
    </div>
</div>

<div class="form-group">
    <label class="col-md-2 control-label">Seo Title</label>
    <div class="col-md-4">
        @Html.TextBoxFor(x => x.SeoTitle, new {@class = "form-control input-sm", data_rule_required = "true", maxlength = 255})
        @Html.CustomValidationMessageFor(x => x.SeoTitle)
    </div>
</div>

<div class="form-group">
    <label class="col-md-2  col-md-offset-1 control-label">Meta Keywords</label>
    <label class="col-md-2 control-label">Meta Description</label>
</div>

<div class="form-group">
    <div class="col-md-2 col-md-offset-2">
        @Html.TextAreaFor(x => x.MetaKeyword, new {@class = "form-control input-sm", data_rule_required = "true", maxlength = 500})
        @Html.CustomValidationMessageFor(x => x.MetaKeyword)
    </div>
    <div class="col-md-2">
        @Html.TextAreaFor(x => x.MetaDescription, new {@class = "form-control input-sm", data_rule_required = "true", maxlength = 500})
        @Html.CustomValidationMessageFor(x => x.MetaDescription)
    </div>
</div>

@Html.HiddenFor(x => x.ContentId)
@Html.HiddenFor(x => x.PredefinedPage)
@Html.HiddenFor(x => x.HttpStatusCode)

<script src="~/Areas/Dashboard/Assets/dist/js/partial-view-scripts.js"></script>