@using WebViewPage = MovieConnections.Web.Areas.WebViewPage
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Movie Connections</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
    page. However, you can choose any other skin. Make sure you
    apply the skin class to the body tag so the changes take effect.
    -->

    @Styles.Render("~/AdminLTE/all/css", "~/Kendo/All/css", "~/Plugins/css")


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @Scripts.Render("~/Jquery/js")

    @RenderSection("head", required: false)
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to get the
desired effect
|---------------------------------------------------------|
| SKINS         | skin-blue                               |
|               | skin-black                              |
|               | skin-purple                             |
|               | skin-yellow                             |
|               | skin-red                                |
|               | skin-green                              |
|---------------------------------------------------------|
|LAYOUT OPTIONS | fixed                                   |
|               | layout-boxed                            |
|               | layout-top-nav                          |
|               | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->

<body  class="hold-transition skin-blue sidebar-mini">
@Html.Partial("~/Areas/Dashboard/Views/Shared/Partials/_Header.cshtml")
@Html.Partial("~/Areas/Dashboard/Views/Shared/Partials/_SideBar.cshtml")

<div class="content-wrapper">
    @Html.RenderNotification()
    @RenderBody()
</div>

@Html.Partial("~/Areas/Dashboard/Views/Shared/Partials/_Footer.cshtml")

    @Scripts.Render("~/AdminLTE/all/js", "~/Kendo/All/js", "~/CkEditor/js", "~/Plugins/js")
    @Scripts.Render("~/GeneralScripts/js")
    @RenderSection("scripts", false)
</body>
</html>
